# I worked with Sheila to do this project

# This is step 1: greeting.

print("Welcome user. This is a tip calculator (NYC tip of 8.875%).")

# This is step 2: bill total.

def get_bill_total():
    bill = float(input("Enter how much your bill was: $"))
    return bill

bill = get_bill_total()
print("subtotal: ",bill)

# This is step 3: calculating tax.

def calculate_ny_tax(bill):
    tax = (bill * 0.08875)
    print("Tax: ",tax)
    return tax

tax = calculate_ny_tax(bill)

# This is step 4: get tip percentage.

def get_tip_percentage(bill):
    print("How much do you want to tip?")
    print("a) 15%")
    print("b) 18%")
    print("c) 20%")
    print("d) Custom tip")

    choice = input("Pick 1, 2, 3, or 4: ")

    if choice == "1":
        tip_percent = 0.15
    elif choice == "2":
        tip_percent = 0.18
    elif choice == "3":
        tip_percent = 0.20
    else:
        custom = float(input("Enter your own tip percentage: "))
        tip_percent = custom / 100

    tip = bill * tip_percent
    return tip

tip = get_tip_percentage(bill)

# This is the overall total display

print("------------------------------")
print("Tip: $",tip)
grandtotal = tip + bill + tax
print ("Grand total: $",grandtotal)

# Extra cred 1:

def split_bill(grandtotal):
    people = int(input("How many people are splitting the bill? "))
    if people > 0:
        each = grandtotal / people
        print("Each person pays: $", round(each, 2))
    else:
        print("You must enter at least 1 person.")

split_bill(grandtotal)
